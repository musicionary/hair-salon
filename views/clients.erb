<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center teal-text text-lighten-2">Hairs not Scares</h1>
      <div class="row center">
        <a href="/locations" id="download-button" class="btn-large waves-effect waves-light teal lighten-1">View Locations</a>
        <a href="/stylists" id="download-button" class="btn-large waves-effect waves-light teal lighten-1">View Stylists</a>
      </div>
      <div class="row center">
        <a href="/clients/new" id="download-button" class="btn-large waves-effect waves-light white lighten-1 teal-text">Add Clients</a>
      </div>
      <br><br>

    </div>
  </div>
  <div class="parallax"><img src="<%= url('img/pugwrap.jpg') %>" alt="Unsplashed background img 1"></div>
</div>

<div class="container">
  <div class="row center">
    <% if @clients.any?() %>
      <ul class="collection with-header">
        <li class="collection-header">Stylists</li>
        <% @clients.each() do |client| %>
          <li class="collection-item"><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h2>There are no clients yet!</h2>
    <% end %>
  </div>
</div>
